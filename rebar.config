{erl_opts, 
  [warn_unused_vars, warn_export_all,
  warn_shadow_vars, warn_unused_import,
  warn_unused_function, warn_bif_clash,
  warn_unused_record, warn_deprecated_function,
  warn_obsolete_guard, strict_validation,
  warn_export_vars, warn_exported_vars,
  debug_info]}.

{minimum_otp_vsn, "25"}.

{deps, []}.

{cover_enabled, true}.

{alias, [{test, 
  [{format, "--verify"}, lint, hank, 
  xref, dialyzer, ct, cover, edoc]}]}.

{relx, 
  [{release,
    {my_app, "0.0.1"}, 
    [{runtime_tools, load},
    kernel, stdlib, sasl, my_app]},
    {include_src, false},
    {check_for_undefined_functions, true},
    {src_tests, true},
    {dev_mode, false},
    {include_erts, true},
    {extended_start_script, true}]}.

{project_plugins, [rebar3_format, rebar3_lint, rebar3_hank]}.

{xref_checks, 
  [undefined_function_calls, deprecated_functions,
  local_not_used, deprecated_function_calls,
  unused_exports]}.

